include headmenu.pug
div#entireCont
    br
    if (success != '') 
        p.heading(style='color:green') #{success}
        br

    div.homeCircle#homeCircle
        br
        br
        br
        h1#homeWelcome Welcome to the Drystore
        br
        if user
            p.heading Hi, #{user.name}!
        br
        div#homeWelcomeinfo
        br
        br
        if !user
            form(action='/users/login')
                button.generalButton Login
        if user
            form(action='/users/confirmlogout')
                button.generalButton Logout
    br
    br
    br
    br
    div.heading.homeLinks
        a(href='/users/register') Add a new User
        br
        a(href='/about') About The Drystore
        br
        a(href='http://freesuggestionbox.com/pub/hnbiazp') Feature Requests / Report a Bug
script(src='/js/showdate.js')
script(src='https://code.jquery.com/jquery-3.2.1.min.js', integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=', crossorigin='anonymous')
script.
  //Fade in info blocks
  $(function () {
  $('#homeCircle,.homeLinks').fadeIn(500);
  });
